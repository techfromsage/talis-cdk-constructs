{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":enableVulnerabilityAlerts",
    "npm:unpublishSafe",
    ":maintainLockFilesWeekly",
    "schedule:weekends"
  ],
  "configMigration": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 1,
  "rangeStrategy": "auto",
  "autoApprove": true,
  "automergeType": "pr",
  "automerge": true,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "production dependencies (minor/patch)",
      "groupSlug": "prod-minor-patch"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "dev dependencies (minor/patch)",
      "groupSlug": "dev-minor-patch"
    },
    {
      "groupName": "ESLint",
      "matchPackageNames": ["/^typescript-eslint/", "/^eslint/"]
    },
    {
      "matchPackageNames": ["node", "cimg/node"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "node non-major dependencies",
      "groupSlug": "node-all-minor-patch"
    }
  ],
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/London"
}
